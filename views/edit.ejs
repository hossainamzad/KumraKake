    <input name='name' type='text' value='<%= data.name %>' />
    <input name='type' type='text' value='<%= data.type %>' />
    <input name='nutrition' type='text' value='<%= data.nutrition %>' />
    <input name='cost' type='decimal' value='<%= data.cost %>' />
    <input type='submit' value='Edit it!' id="edit" />
  </form>
</section>

