<body>
  <header>
    <h1 id="title">
      <span id="k">K</span><span id="u">u</span><span id="m">m</span><span id="r">r</span><span id="a">a</span><span id="secondk">K</span><span id="2nd-a">a</span><span id="k">k</span><span id="e">e</span>
